@model TRUE_CONCEPT.Models.BaoCaoNhap

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/layout-admin.cshtml";


}

<h2>Chi tiết phiếu nhập</h2>

<div>
 
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NgayNhap)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayNhap)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TongTien)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TongTien)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GiamGia)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GiamGia)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ThanhTien)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ThanhTien)
        </dd>

    </dl>
    <hr />
    <div class="container__product" >
        <table class="table" style="width:100%;">
            <tr>
                <th class="tbl-idSp">Mã sản phẩm</th>
                <th class="tbl-img">Ảnh</th>
                <th class="tbl-nameP">Tên sản phẩm</th>
                <th class="tbl-quantity">Số lượng nhập</th>
                <th class="tbl-price">Đơn giá</th>
            </tr>

            @foreach (var item in ViewBag.product)
            {
                <tr>
                    <td class="tbl-idSp">
                        #@item.ID
                    </td>

                    <td class="tbl-img">
                        <img src="@item.Img_Url" style="width:60px; height:60px;" />
                    </td>

                    <td class="tbl-nameP">
                        @item.NameProduct
                    </td>
                    <td class="tbl-quantity">
                        @item.Quantity
                    </td>
                    <td class="tbl-price">
                        @Html.FormatValue(item.Price, "{0:#,###}") đ     
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MaPhieuNhap }) |
    @Html.ActionLink("Back to List", "Index")
</p>
