@model TRUE_CONCEPT.Models.Account
@{ Layout = null; }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Areas/Authentication/Content/css/LoginForm.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&family=Nunito+Sans:opsz@6..12&family=Open+Sans&family=Roboto&display=swap" rel="stylesheet">
</head>
<body class="">
    <div class="AllPage-Login">
        <div class="login-box-wrapper">
            <div class="login-box-body">
                <p class="login-box-msg">ĐĂNG NHẬP</p>
                <form action="@Url.Action("Index", "Login", new { area = "Authentication" })" method="post">
                    @Html.ValidationSummary(true)
                    <div class="form-group has-feedback">

                        @Html.TextBoxFor(a => a.UserName, new { @class = "form-control", placeholder = "Email" })
                        <!-- icon -->
                        <div>
                            @Html.ValidationMessageFor(a => a.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group has-feedback">

                        @Html.TextBoxFor(a => a.Password, new { @class = "form-control", placeholder = "Password" })
                        <!-- icon -->
                        <div>
                            @Html.ValidationMessageFor(a => a.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">ĐĂNG NHẬP</button>
                        </div><!-- /.col -->
                        <div class="Suggest-msg">
                            <p>Bạn chưa có tài khoản?</p>
                            <br>
                            <a class="DK_btn" href="/Authentication/SignUp/Index">ĐĂNG KÝ</a>

                        </div>
                    </div>
                </form>
            </div><!-- /.login-box-body -->
        </div><!-- /.login-box -->
    </div>


</body>
</html>
