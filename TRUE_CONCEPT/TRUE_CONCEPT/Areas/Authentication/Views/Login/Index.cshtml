@model TRUE_CONCEPT.Models.Account
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-box-body">
            <p class="login-box-msg">Sign in to start your session</p>
            <form action="@Url.Action("Index", "Login", new { area = "Authentication" })" method="post">
                @Html.ValidationSummary(true)
                <div class="form-group has-feedback">

                    @Html.TextBoxFor(a => a.UserName, new { @class = "form-control", placeholder = "Email" })
                    <!-- icon -->
                    <div>
                        @Html.ValidationMessageFor(a => a.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group has-feedback">

                    @Html.TextBoxFor(a => a.Password, new { @class = "form-control", placeholder = "Password" })
                    <!-- icon -->
                    <div>
                        @Html.ValidationMessageFor(a => a.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Đăng nhập</button>
                    </div><!-- /.col -->
                </div>
            </form>
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->

</body>
</html>
