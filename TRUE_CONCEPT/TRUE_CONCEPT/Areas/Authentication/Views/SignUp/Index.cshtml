@model TRUE_CONCEPT.Models.ViewModel.SignUpViewModel


@{ Layout = null; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Đăng ký</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/Areas/Authentication/Content/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link href="~/Areas/Authentication/Content/css/style.css" rel="stylesheet" />
    <link href="~/Areas/Authentication/Content/css/SignUp.css" rel="stylesheet" />
</head>
<body>
    <div class="main">
        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                        <form action="@Url.Action("Index", "SignUp", new { area = "Authentication" })" method="POST" class="register-form" id="register-form">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                @Html.TextBoxFor(a => a.FullName, new { @class = "form-control", placeholder = "Họ tên" })

                            </div>

                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                @Html.TextBoxFor(a => a.Email, new { @class = "form-control", placeholder = "Email", type = "Email" })
                            </div>
                            <div class="form-group">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                @Html.TextBoxFor(a => a.Password, new { @class = "form-control", placeholder = "Mật khẩu", type = "password" })
                            </div>
                            <div class="form-group">
                                <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                                @Html.TextBoxFor(a => a.RePassword, new { @class = "form-control", placeholder = "Nhập lại mật khẩu", type = "password" })
                            </div>
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Đăng ký" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/Areas/Authentication/Content/images/signup-image.jpg" alt="sing up image"></figure>
                        <a href="@Url.Action("Index", "Login", new { area = "Authentication" })" class="signup-image-link">Bạn đã có tài khoản?</a>
                    </div>
                </div>
            </div>

        </section>
    </div>


</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>

