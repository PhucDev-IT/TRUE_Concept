@model IEnumerable<TRUE_CONCEPT.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Client/Views/Shared/layout-client.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SanPham</title>

    <!-- FONT(ONLY USE THIS WAY IN VSCODE)-->
    @* <style>
            @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Nunito+Sans:opsz@6..12&family=Open+Sans&family=Roboto&display=swap');
        </style>*@

    <!-- BOOSTRAP CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap-grid.min.css" integrity="sha512-ZuRTqfQ3jNAKvJskDAU/hxbX1w25g41bANOVd1Co6GahIe2XjM6uVZ9dh0Nt3KFCOA061amfF2VeL60aJXdwwQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.min.js" integrity="sha512-WW8/jxkELe2CAiE4LvQfwm1rajOS8PHasCCx+knHG0gBHt8EXxS6T6tJRTGuDQVnluuAvMxWF4j8SNFDKceLFg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- FONTAWESOME CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- only use in vscode -->
    @*<link rel="stylesheet" href="SanPham.css">
        <link rel="stylesheet" href="Index.css">
        <link rel="stylesheet" href="LayoutClient.css">*@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- LINK CSS -->
    <link href="~/Areas/Client/Content/css/Products.css" rel="stylesheet" />
</head>
<body>
  
    <div class="AllPage-product container-fluid">
        <div class="grid-wide-product">
            <div class="Block1-ProductPage d-flex">
                <div class="Category-Product col-3">
                    <h1>DANH MỤC SẢN PHẨM</h1>
                    <ul class="List-TypeProduct">
                        @foreach (var item in ViewBag.Categories)
                        {
                            <li class="Product-type">
                                <i class="fa-solid fa-chevron-right"></i>
                                <a  href="@Url.Action("Index","Products",new { idCategory = item.IDCategory})"  class="linkProduct-type">@item.NameCategory</a>
                                <p class="amount-of-product">(@item.QuantityProduct)</p>
                            </li>
                        }


                    </ul>
                </div>
                <div class="Right-Side-Block1 col-9">
                    <div class="List-Policies">
                        <div class="Policy-Item col-3">
                            <i class="fa-solid fa-truck-fast"></i>
                            <div class="content-policy-item">
                                <h3>CHÍNH SÁCH GIAO HÀNG</h3>
                                <p>Nhận hàng và thanh toán ngay tại nhà</p>
                            </div>
                        </div>
                        <div class="Policy-Item col-3">
                            <i class="fa-solid fa-arrows-rotate"></i>
                            <div class="content-policy-item">
                                <h3>ĐỔI TRẢ DỄ DÀNG</h3>
                                <p>1 đổi 1 trong 15 ngày</p>
                            </div>
                        </div>
                        <div class="Policy-Item col-3">
                            <i class="fa-regular fa-credit-card"></i>
                            <div class="content-policy-item">
                                <h3>THANH TOÁN TIỆN LỢI</h3>
                                <p>Trả tiền mặt, CK, trả góp 0%</p>
                            </div>
                        </div>
                        <div class="Policy-Item col-3">
                            <i class="fa-regular fa-comments"></i>
                            <div class="content-policy-item">
                                <h3>THÔNG TIN KHUYẾN MẠI</h3>
                                <p>Tư vấn, giải đáp mọi thắc mắc</p>
                            </div>
                        </div>
                    </div>
                    <div class="function-bar">
                        <!-- Custom lại phần này cho phù hợp với yêu cầu của đề tài vì đây chỉ là demo -->
                        <div class="FunctionTab col-3">
                            <div class="funcTab-name">
                                <p>Tình trạng kho hàng</p>
                                <i class="fa-solid fa-chevron-down"></i>
                            </div>
                            <div class="list-dropdown">
                                <!-- Cái này thì để sau tính  -->
                            </div>
                        </div>
                        <div class="FunctionTab col-3">
                            <div class="funcTab-name">
                                <p>Tất cả kho hàng</p>
                                <i class="fa-solid fa-chevron-down"></i>
                            </div>
                            <div class="list-dropdown">
                                <!-- Cái này thì để sau tính  -->
                            </div>
                        </div>

                        <div class="FunctionTab col-3">
                            <div class="funcTab-name">
                                <p>Sắp xếp theo</p>
                                <i class="fa-solid fa-chevron-down"></i>
                            </div>
                            <div class="list-dropdown">
                                <!-- Cái này thì để sau tính  -->
                            </div>
                        </div>
                        <div class="Number_of_TabSP col-3">
                            <ul>
                                @if (ViewBag.TotalPage > 0)
                                {
                                    for (int i = 1; i < ViewBag.TotalPage; i++)
                                    {
                                        if (i == 6)
                                        {
                                            break;
                                        }
                                        <li  data-id="@i" class="number">
                                     
                                            <a href="@Url.Action("Index","Products", new {idCategory=ViewBag.idCategory , page=i  })">@i</a>
                                        </li>
                                    }
                                    <li class="number"><a href="@Url.Action("Index","Products", new {idCategory=ViewBag.idCategory , page=ViewBag.currentPage+1 })">Next</a></li>
                                }

                            </ul>
                        </div>
                    </div>

                    <div class="List-product">
                        <!-- đặt vào trong vòng lặp ---- > reder ra list product-->
                        @foreach (var item in Model)
                        {
                            <div data-id="@item.ID" onclick="clickProduct(this)" class="product-card col-3">
                                <div class="addPadding-product-card">
                                    <div class="imgProduct_Wrapper"><img src="@item.ImgDemo" alt=""></div>
                                    <h5 class="product-name">@item.NameProduct</h5>
                                    <p class="old-price"> @Html.FormatValue(item.PriceOld, "{0:#,###}")đ</p>
                                    <p class="new-price"> @Html.FormatValue(item.NewPrice, "{0:#,###}")đ</p>
                                    <div class="status-cartIcon">
                                        @if (item.Quantity > 0)
                                        {


                                            <div class="tick-title">
                                                <i class="fa-solid fa-check"></i>
                                                <p>Còn hàng</p>
                                            </div>
                                            <div class="icon-AddtoCart">
                                                <i class="fa-solid fa-cart-shopping"></i>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="tick-title icon2">
                                                <i class="fa-solid fa-xmark" style="color: #ff0a0a;"></i>
                                                <p>Tạm hết</p>
                                            </div>
                                        }

                                    </div>
                                </div>
                            </div>
                        }

                    </div>

                </div>
            </div>

            <div class="Block2-ProductPage">
                <div class="Block-feel-the-product">

                </div>
                <div class="block-DK-get-Email">
                    <div class="DK-get-Email">
                        <h1>ĐĂNG KÝ NHẬN EMAIL THÔNG BÁO KHUYẾN MẠI HOẶC ĐỂ ĐƯỢC TƯ VẤN MIỄN PHÍ</h1>
                        <div class="input-submitBtn">
                            <input type="text" placeholder="Nhập email hoặc số điện thoại của bạn">
                            <div class="btnSubmit"><a href="">GỬI</a></div>
                        </div>
                    </div>
                </div>
            </div>


        </div>

    </div>
</body>
</html>
<script>


    //Chọn 1 sản phẩm bất kỳ
   function clickProduct(value) {
    var idProduct = $(value).data('id');
    window.location.href = '/Client/Detail_products/Index?idProduct=' + idProduct;
}

</script>
